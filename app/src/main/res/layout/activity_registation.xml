<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registation">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#DFFFDF"
            android:padding="7dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_margin="2dp"
                android:background="#DDD9D9"
                android:layout_gravity="center"
                android:gravity="center">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="First Name"
                    android:textColor="#221E1E"
                    android:background="#FFFFFF"
                    android:textSize="19sp"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:gravity="center_vertical"
                    android:layout_margin="1dp"
                    android:layout_gravity="center"/>
                <EditText
                    android:id="@+id/firstNameET"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:hint="enter your first name"
                    android:textColor="#221E1E"
                    android:background="#FFFFFF"
                    android:textSize="19sp"
                    android:layout_weight="3"
                    android:layout_margin="1dp"
                    android:padding="4dp"

                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_margin="2dp"
                android:background="#DDD9D9"
                android:layout_gravity="center"
                android:gravity="center">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Last Name"
                    android:textColor="#221E1E"
                    android:background="#FFFFFF"
                    android:textSize="19sp"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:gravity="center_vertical"
                    android:layout_margin="1dp"/>
                <EditText
                    android:id="@+id/lastNameET"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:hint="enter your last name"
                    android:textColor="#221E1E"
                    android:background="#FFFFFF"
                    android:textSize="19sp"
                    android:layout_weight="3"
                    android:layout_margin="1dp"
                    android:padding="4dp"

                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_margin="2dp"
                android:background="#DDD9D9"
                android:layout_gravity="center"
                android:gravity="center">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="User ID"
                    android:textColor="#221E1E"
                    android:background="#FFFFFF"
                    android:textSize="19sp"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:gravity="center_vertical"
                    android:layout_margin="1dp"/>
                <EditText
                    android:id="@+id/iDET"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:hint="enter your ID"
                    android:textColor="#221E1E"
                    android:background="#FFFFFF"
                    android:textSize="19sp"
                    android:layout_weight="3"
                    android:layout_margin="1dp"
                    android:padding="4dp"

                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_margin="2dp"
                android:background="#DDD9D9"
                android:layout_gravity="center"
                android:gravity="center">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Password"
                    android:textColor="#221E1E"
                    android:background="#FFFFFF"
                    android:textSize="19sp"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:gravity="center_vertical"
                    android:layout_margin="1dp"/>
                <EditText
                    android:id="@+id/passwordET"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:hint="enter your password"
                    android:inputType="textPassword"
                    android:textColor="#221E1E"
                    android:background="#FFFFFF"
                    android:textSize="19sp"
                    android:layout_weight="3"
                    android:layout_margin="1dp"
                    android:padding="4dp"

                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_margin="2dp"
                android:background="#DDD9D9"
                android:layout_gravity="center"
                android:gravity="center">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Mobile"
                    android:textColor="#221E1E"
                    android:background="#FFFFFF"
                    android:textSize="19sp"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:gravity="center_vertical"
                    android:layout_margin="1dp"/>
                <EditText
                    android:id="@+id/mobileET"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:hint="enter your mobile number"
                    android:textColor="#221E1E"
                    android:background="#FFFFFF"
                    android:textSize="19sp"
                    android:layout_weight="3"
                    android:layout_margin="1dp"
                    android:padding="4dp"

                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_margin="2dp"
                android:background="#DDD9D9"
                android:layout_gravity="center"
                android:gravity="center">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Email"
                    android:textColor="#221E1E"
                    android:background="#FFFFFF"
                    android:textSize="19sp"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:gravity="center_vertical"
                    android:layout_margin="1dp"/>
                <EditText
                    android:id="@+id/emailET"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:hint="enter your email"
                    android:inputType="textEmailAddress"
                    android:textColor="#221E1E"
                    android:background="#FFFFFF"
                    android:textSize="19sp"
                    android:layout_weight="3"
                    android:layout_margin="1dp"
                    android:padding="4dp"

                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_margin="2dp"
                android:layout_gravity="center"
                android:background="#DDD9D9"
                android:gravity="center">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Gander"
                    android:layout_gravity="center"
                    android:textColor="#221E1E"
                    android:background="#FFFFFF"
                    android:textSize="18sp"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:gravity="center_vertical"
                    android:layout_margin="1dp"/>
                <RadioGroup
                    android:id="@+id/ganderRG"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:background="#DDD9D9"
                    android:layout_weight="3">
                    <RadioButton
                        android:id="@+id/maleRB"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="Male"
                        android:textSize="18sp"
                        android:background="#FFFFFF"
                        android:layout_weight="1"
                        android:padding="2dp"
                        android:layout_margin="1dp"

                        />

                    <RadioButton
                        android:id="@+id/femaleRB"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="Female"
                        android:textSize="18sp"
                        android:background="#FFFFFF"
                        android:layout_weight="1"
                        android:layout_margin="1dp"
                        android:padding="1dp"/>
                </RadioGroup>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_margin="2dp"
                android:background="#DDD9D9"
                android:layout_gravity="center"
                android:gravity="center">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Date of Birdth"
                    android:textColor="#221E1E"
                    android:background="#FFFFFF"
                    android:textSize="19sp"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:gravity="center_vertical"
                    android:layout_margin="1dp"/>
                <TextView
                    android:id="@+id/dateOfBirthTV"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:hint="enter your NID number"
                    android:textColor="#221E1E"
                    android:background="#FFFFFF"
                    android:textSize="19sp"
                    android:layout_weight="3"
                    android:layout_margin="1dp"
                    android:padding="4dp"

                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_margin="2dp"
                android:background="#DDD9D9"
                android:layout_gravity="center"
                android:gravity="center">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Present Address"
                    android:textColor="#221E1E"
                    android:background="#FFFFFF"
                    android:textSize="19sp"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:gravity="center_vertical"
                    android:layout_margin="1dp"/>
                <EditText
                    android:id="@+id/presentAddressET"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:hint="enter your present address"
                    android:textColor="#221E1E"
                    android:background="#FFFFFF"
                    android:textSize="19sp"
                    android:layout_weight="3"
                    android:layout_margin="1dp"
                    android:padding="4dp"

                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_margin="2dp"
                android:background="#DDD9D9"
                android:layout_gravity="center"
                android:gravity="center">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Permanetn Address"
                    android:textColor="#221E1E"
                    android:background="#FFFFFF"
                    android:textSize="19sp"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:layout_margin="1dp"/>
                <EditText
                    android:id="@+id/permanentET"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:hint="enter your permanent address"
                    android:textColor="#221E1E"
                    android:background="#FFFFFF"
                    android:textSize="19sp"
                    android:layout_weight="3"
                    android:layout_margin="1dp"
                    android:padding="4dp"

                    />

            </LinearLayout>

            <Button
                android:id="@+id/registerBtn"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_margin="1dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:background="@drawable/custom_button_corner_curb"
                android:gravity="center"
                android:text="    Done    "
                android:textStyle="bold"
                android:textColor="#FDFDFD"
                android:textSize="30sp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>