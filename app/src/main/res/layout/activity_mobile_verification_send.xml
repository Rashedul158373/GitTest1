<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MobileVerificationSend"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="#FFFFFF">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome to my apps"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_margin="2dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="this is my apps"
            android:textSize="25sp"
            android:layout_margin="2dp"
            />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="2"
            android:gravity="center">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:src="@drawable/bangladesh_flag_icon"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="+88"
                android:textStyle="bold"
                android:textSize="26sp"
                android:layout_margin="2dp"
                android:gravity="center"/>
            <EditText
                android:id="@+id/inputNumberET"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:hint="number"
                android:inputType="number"
                android:layout_margin="2dp"
                android:textStyle="bold"
                android:textSize="26sp"/>


        </LinearLayout>
        <CheckBox
            android:id="@+id/confirmCb"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Do you agree verification?"
            android:textSize="25sp"/>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="2">

        <Button
            android:id="@+id/verifySendBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="send code"
            android:textStyle="bold"
            android:enabled="false"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:background="@drawable/verify_defaultbtn"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_margin="1dp"
            />

    </LinearLayout>



</LinearLayout>